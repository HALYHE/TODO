<Window x:Class="ToDo_list.page.ToDoNote"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDo_list.page"
        mc:Ignorable="d"
        Title="ToDoNote" Height="450" Width="500">
    <Grid Height="434" VerticalAlignment="Top">
        <StackPanel>
            <TextBox x:Name="txt_title" Margin="5" Height="30" Width="480"/>
            <TextBox x:Name="txt_description" Margin="5" Height="300" TextWrapping="Wrap" Width="480"/>
            <Button x:Name="btn_edit" Background="White" Height="30" Width="140" Content="Сохранить изменения" Click="btn_edit_Click"/>
        </StackPanel>
    </Grid>
</Window>
